{
  "name": "vite-userscript-plugin",
  "version": "1.9.1",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui --watch",
    "dev:examples": "turbo run dev --filter='./examples/*'",
    "build:examples": "turbo run build --filter='./examples/*'",
    "format": "prettier --write --ignore-unknown **",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/vite-userscript-plugin.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "userscript",
    "tampermonkey",
    "greasemonkey",
    "violentmonkey"
  ],
  "author": {
    "name": "Vitalij Ryndin",
    "email": "sys@crashmax.ru",
    "url": "https://crashmax.ru"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crashmax-dev/vite-userscript-plugin/issues"
  },
  "dependencies": {
    "get-port": "7.0.0",
    "open": "9.1.0",
    "picocolors": "1.0.0",
    "serve-handler": "6.1.5",
    "websocket": "1.0.34"
  },
  "devDependencies": {
    "@crashmax/prettier-config": "3.2.1",
    "@crashmax/tsconfig": "2.0.1",
    "@types/node": "18.15.3",
    "@types/serve-handler": "6.1.1",
    "@types/websocket": "1.0.5",
    "@vitest/ui": "0.32.2",
    "tsup": "7.0.0",
    "turbo": "1.10.3",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vite-plugin-dts": "2.3.0",
    "vitest": "0.32.2"
  },
  "peerDependencies": {
    "vite": ">=3.0.0"
  }
}
